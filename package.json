{
  "workspaces": [
    "library/",
    "ui/"
  ],
  "prettier": {
    "useTabs": true,
    "singleQuote": true,
    "trailingComma": "none",
    "printWidth": 100,
    "plugins": [
      "prettier-plugin-svelte"
    ],
    "overrides": [
      {
        "files": "*.svelte",
        "options": {
          "parser": "svelte"
        }
      }
    ]
  },
  "trustedDependencies": [
    "@my/package",
    "@tailwindcss/oxide",
    "esbuild",
    "ui"
  ]
}
